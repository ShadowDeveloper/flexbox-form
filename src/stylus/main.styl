*
  box-sizing border-box
  font-family arial,sans-serif

ul
  margin 0
  padding 0
  li
    list-style none

.deployContainer
  display flex
  flex-flow row wrap
  justify-content center
  
.txtcenter
  text-align center

.deployForm
  display flex
  flex-direction column
  min-width 400px
  margin-right 10px

.deplouyformsection
  margin 10px 0
  padding 0 10px

h4
  display block
  // width 200px
  // margin -8px auto 20px auto
  // background-color #dedede
  padding 5px
  color #2c699b
  font-size .9em

.FCPrimaryBtnP
  border-radius 2px
  background #f5f5f5
  border 1px solid #dcdcdc
  color #444
  cursor pointer
  font-size 11px
  font-weight bold
  line-height 27px
  margin 0
  padding 0 8px

.savebtn
  @extend .FCPrimaryBtnP
  background #2FBE6C
  color #fff
  min-width 150px
  font-size .9em
  display table
  margin 0 auto
.deployfolders
  display flex
  flex-flow column wrap
  li
    margin-bottom 5px
    span
      width 100px
      text-align right
      display inline-block
      margin-right 5px
    
.depoyinfosfilds
  li
    width 100%
    margin 10px 0
    label
      margin-right 5px
      display inline-block
      width 100px
      text-align right
    input, select
      display inline-block
      padding 3px 5px

.deployactions
  display flex
  flex-flow row wrap
.deploystatusbtns
  width 100%
  display flex
  flex-flow column wrap
  align-items center
  button
    width 200px
    margin 10px 0

.FChelpIco
  text-align right
  width 95%
  
.deployinfos
  // background #f7f7f7
  p
    padding 0 10px

.deploystartedat
  max-width 80px
  display inline-block
  text-align center
  margin-left 5px
  border 1px solid #ccc
  padding 3px
  background-color #daffda
  border-radius 2px
  
.sectionborder
  border 1px solid #ccc
    
.btnremovedeploy
  width 100%
  